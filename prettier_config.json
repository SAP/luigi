{
   "js": {
      "parser": "babel-flow",
      "trailingComma": "none",
      "tabWidth": 2,
      "singleQuote": true,
      "printWidth": 120
   },
   "ts": {
      "parser": "typescript",
      "trailingComma": "none",
      "tabWidth": 2,
      "singleQuote": true,
      "printWidth": 120
   },
   "html": {
      "parser": "html",
      "tabWidth": 2,
      "singleQuote": true,
      "printWidth": 90,
      "overrides": [ {
         "files": "*.svelte",
         "options": {
           "svelteBracketNewLine": false,
           "svelteAllowShorthand": false,
           "svelteSortOrder" : "options-scripts-styles-markup",
           "plugins": [ "prettier-plugin-svelte" ]
         }
       } ]
   }
}
