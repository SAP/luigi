{
   "js": {
      "parser": "babel-flow",
      "trailingComma": "none",
      "tabWidth": 2,
      "singleQuote": true,
      "printWidth": 120
   },
   "ts": {
      "parser": "typescript",
      "trailingComma": "none",
      "tabWidth": 2,
      "singleQuote": true,
      "printWidth": 120
   },
   "html": {
      "parser": "html",
      "tabWidth": 2,
      "singleQuote": true,
      "printWidth": 90
   },
   "svelte": {
      "parser": "svelte",
      "plugins": ["prettier-plugin-svelte"],
      "printWidth": 120,
      "singleQuote": true,
      "svelteAllowShorthand": true,
      "svelteBracketNewLine": true,
      "svelteIndentScriptAndStyle": true,
      "svelteSortOrder": "options-scripts-markup-styles",
      "svelteStrictMode": false,
      "tabWidth": 2,
      "trailingComma": "none"
   }
}
