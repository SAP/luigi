{
   "js": {
      "parser": "babel-flow",
      "trailingComma": "none",
      "tabWidth": 2,
      "singleQuote": true,
      "printWidth": 120
   },
   "ts": {
      "parser": "typescript",
      "trailingComma": "none",
      "tabWidth": 2,
      "singleQuote": true,
      "printWidth": 120
   },
   "html": {
      "parser": "html",
      "tabWidth": 2,
      "singleQuote": true,
      "printWidth": 90
   },
   "svelte": {
      "parser": "@typescript-eslint/parser",
      "singleQuote": true,
      "printWidth": 90,
      "plugins": ["prettier-plugin-svelte"],
      "semi": false,
      "svelteSortOrder": "options-styles-scripts-markup",
      "svelteStrictMode": false,
      "svelteBracketNewLine": true,
      "svelteIndentScriptAndStyle": true,
      "trailingComma": "none"
   }
}
