{
  "name": "luigi-documentation",
  "description": "Interactive documentation based on svelte3, sapper and luigi",
  "version": "0.0.1",
  "scripts": {
    "start": "run-p dev:*",
    "dev:sapper": "PORT=4001 sapper dev",
    "dev:config": "npm run build:config -- --watch",
    "dev:luigi": "sirv static/luigi --single --dev --cors --port 4000",
    "debug:sapper": "PORT=4001 node --inspect node_modules/sapper/dist/cli.js dev",
    "build:sapper": "NODE_ENV=production sapper build",
    "build:config": "webpack --config webpack-generateConfig.config",
    "export:sapper": "NODE_ENV=production sapper export --basepath /docu-microfrontend && sh ./scripts/move-export.sh",
    "export:serve": "sirv public --single --dev --cors --port 5000",
    "export": "npm run build:config && npm run export:sapper",
    "test": "run-p --race dev cy:run",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "mock:develop-plugins": "NODE_ENV=debug node -r esm scripts/markdown.unified-preview.js",
    "mock:develop-plugins:watch": "NODE_ENV=debug nodemon -r esm scripts/markdown.unified-preview.js"
  },
  "dependencies": {
    "@kyma-project/luigi-client": "^0.6.0",
    "@kyma-project/luigi-core": "^0.6.0",
    "polka": "next"
  },
  "devDependencies": {
    "@agentofuser/rehype-section": "^1.0.5",
    "@babel/core": "^7.4.0",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.4.2",
    "@babel/register": "^7.0.0",
    "@babel/runtime": "^7.5.5",
    "acorn": "^6.1.1",
    "axios": ">=0.18.1",
    "babel-loader": "^8.0.4",
    "bundlesize": "^0.17.0",
    "chai": "^4.2.0",
    "clean-webpack-plugin": "^1.0.0",
    "compression": "^1.7.1",
    "copy-webpack-plugin": "^5.0.4",
    "css-loader": "^3.2.0",
    "esm": "^3.2.25",
    "fiori-fundamentals": "^1.7.1",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "regexparam": "^1.3.0",
    "rehype-format": "^3.0.0",
    "rehype-highlight": "^3.0.0",
    "rehype-parse": "^6.0.1",
    "rehype-raw": "^4.0.1",
    "rehype-slug": "^2.0.3",
    "rehype-stringify": "^6.0.0",
    "remark": "^11.0.1",
    "remark-html": "^10.0.0",
    "remark-parse": "^7.0.1",
    "remark-preset-lint-markdown-style-guide": "^2.1.3",
    "remark-rehype": "^5.0.0",
    "remark-toc": "^6.0.0",
    "sapper": "^0.27.0",
    "sass-loader": "^8.0.0",
    "sirv-cli": "0.4.4",
    "svelte": "^3.0.0",
    "svelte-loader": "^2.9.0",
    "svelte-preprocess": "^3.2.0",
    "unified": "^8.3.2",
    "vfile-reporter": "^6.0.0",
    "webpack": "^4.7.0",
    "webpack-cli": "^3.0.3"
  }
}
