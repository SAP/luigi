{
  "devDependencies": {
    "husky": "^1.1.2",
    "lerna": "^2.11.0",
    "lerna-changelog": "^0.8.0",
    "prettier": "^1.13.7"
  },
  "prettier": {
    "singleQuote": true
  },
  "changelog": {
    "repo": "kyma-project/luigi",
    "labels": {
      "breaking": ":boom: Breaking Change",
      "enhancement": ":rocket: Added",
      "bug": ":bug: Fixed",
      "area/documentation": ":memo: Documentation"
    },
    "cacheDir": ".changelog"
  },
  "husky": {
    "hooks": {
      "pre-commit": "./scripts/apply-prettier.sh",
      "pre-push": "lerna run docu:validate"
    }
  }
}
