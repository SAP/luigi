{
  "scripts": {
    "test:compatibility": "./scripts/testCompatibility.sh"
  },
  "devDependencies": {
    "@starptech/prettyhtml": "^0.8.16",
    "husky": "^1.3.1",
    "lerna": "^3.9.0",
    "lerna-changelog": "^0.8.0",
    "prettier": "^1.15.3"
  },
  "prettier": {
    "singleQuote": true
  },
  "changelog": {
    "repo": "kyma-project/luigi",
    "labels": {
      "breaking": ":boom: Breaking Change",
      "enhancement": ":rocket: Added",
      "bug": ":bug: Fixed",
      "area/documentation": ":memo: Documentation"
    },
    "cacheDir": ".changelog"
  },
  "husky": {
    "hooks": {
      "pre-commit": "./scripts/hooks/apply-formatters.sh && ./scripts/hooks/remove-test-prefixes.sh",
      "pre-push": "lerna run prepush"
    }
  }
}
