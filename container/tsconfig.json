{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [
    "instrumented/**/*",
    "src/**/*",
    "src/node_modules",
    "test/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "__sapper__/*",
    "public/*"
  ],
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2021"
  },
}