    {
      "path": "./public/luigi.css",
      "maxSize": "800 kB",
      "compression": "none"
    }
  ],
  "repository": {
    "type": "git",
    "url": "ssh://github.com/SAP/luigi.git"
  },
  "engines": {
    "node": ">=18"
  }
}