{
  "name": "luigi-core-private",
  "private": true,
  "description": "luigi-core development version, only the public folder is being published to npm as a package",
  "devDependencies": {
    "@babel/node": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "@sap-theming/theming-base-content": "11.1.48",
    "@sveltejs/vite-plugin-svelte": "^1.0.1",
    "bundlesize2": "^0.0.31",
    "chai": "^4.3.6",
    "css-tree": "^2.3.1",
    "fundamental-styles": "0.26.5",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "jsdom": "^20.0.0",
    "jsdom-global": "^3.0.2",
    "live-server": "^1.2.2",
    "lodash": "^4.17.21",
    "lodash.template": "^4.5.0",
    "mock-local-storage": "^1.1.23",
    "node-fetch": "2.6.7",
    "sass": "^1.54.0",
    "sinon": "^14.0.0",
    "svelte": "^3.49.0",
    "svelte-preprocess": "^4.10.7",
    "typescript": "^4.9.4",
    "vite": "^3.0.3"
  },
  "overrides": {
    "bundlesize2": {
      "node-fetch": "2.6.7"
    }
  },
  "scripts": {
    "test": "jest",
    "bundlesize": "npm run build && bundlesize",
    "bundlesizeOnly": "bundlesize",
    "build": "vite build",
    "watch": "vite build --watch",
    "bundle": "npm run build",
    "simpledev": "node ./dev-tools/simpledev-vite.mjs"
  },
  "bundlesize": [
    {
      "path": "./public/luigi.js",
      "maxSize": "650 kB",
      "compression": "none"
